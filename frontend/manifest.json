{
  "manifest_version": 3,
  "name": "Concize RAG",
  "version": "1.0",
  "description": "An extension to record audio and send it to the Concize RAG pipeline.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabCapture"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/icon16.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  }
}
